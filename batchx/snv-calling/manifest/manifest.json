{
  "title": "Performs SNV calling using GATK suite",
  "name": "bioinformatics/fjd/snv-calling",
  "version": "0.0.1",
  "schema": {
    "input": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "refFolder": {
          "type": "string",
          "required": true,
          "format": "file",
          "description": "Reference folder, containing FASTA and index files."
        },
        "bamFile": {
          "type": "string",
          "required": true,
          "format": "file",
          "description": "BAM file"
        },
        "bamIndex": {
          "type": "string",
          "required": true,
          "format": "file",
          "description": "SAM/BAM file index"
        },
        "gvcfCalling": {
          "type": "boolean",
          "default": false,
          "description": "Perform GATK GVCF calling."
        },
        "panelInfo": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "panelFile": {
              "type": "string",
              "required": true,
              "format": "file",
              "description": "Reference folder, containing FASTA and index files."
            },
            "intervalPadding": {
              "type": "integer",
              "default": 0,
              "description": "Amount of padding (in bp) to add to each interval you are including."
            }
          }
        },
        "outputPrefix": {
          "type": "string",
          "required": true,
          "description": "Prefix to use in the output files."
        }
      }
    },
    "output": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "outputVcf": {
          "type": "string",
          "required": true,
          "format": "file",
          "description": "Output VCF file."
        },
        "outputBam": {
          "type": "string",
          "required": true,
          "format": "file",
          "description": "File with assembled haplotypes."
        }
      }
    }
  },
  "author": "BatchX",
  "runtime": {
    "minMem": 4000
  },
  "changeLog": "Removed CNN branch."
}
